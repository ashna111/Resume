<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".form">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llPdf">

            <TextView
                android:id="@+id/nametag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Name:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/name"
                android:layout_below="@+id/nametag"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="What should we call you?" />

            <TextView
                android:id="@+id/nametext"
                android:layout_below="@+id/nametag"
                android:visibility="invisible"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/agetag"
            android:layout_below="@+id/name"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="Age:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/age"
            android:layout_below="@+id/agetag"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:hint="How old are you?" />

        <TextView
            android:id="@+id/agetext"
            android:layout_below="@+id/agetag"
            android:textSize="17sp"
            android:visibility="invisible"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/emailtag"
            android:layout_below="@+id/age"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email id:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/email"
            android:layout_below="@+id/emailtag"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:hint="Email you maybe?" />

        <TextView
            android:id="@+id/emailtext"
            android:layout_below="@+id/emailtag"
            android:visibility="invisible"
            android:textSize="17sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/phonetag"
            android:layout_below="@+id/email"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="Phone number:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/phone"
            android:layout_below="@+id/phonetag"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:hint="Where should we call you?" />

        <TextView
            android:id="@+id/phonetext"
            android:layout_below="@+id/phonetag"
            android:textColor="#000000"
            android:textSize="17sp"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/qualitag"
            android:layout_below="@id/phone"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qualification:"
            android:textSize="20dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quali"
            android:layout_below="@+id/qualitag"
            />

        <TextView
            android:id="@+id/qualitext"
            android:layout_below="@+id/qualitag"
            android:visibility="invisible"
            android:textSize="17sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/projtag"
            android:layout_below="@id/quali"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="Project link:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/proj"
            android:layout_below="@+id/projtag"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:hint="What projects have you done?" />

        <TextView
            android:id="@+id/projtext"
            android:layout_below="@+id/projtag"
            android:textSize="17sp"
            android:textColor="#000000"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/langtag"
            android:layout_below="@+id/proj"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="Programming languages known:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/lang"
            android:layout_below="@+id/langtag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Which language do you code?" />

        <TextView
            android:id="@+id/langtext"
            android:layout_below="@+id/langtag"
            android:textColor="#000000"
            android:textSize="17sp"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/wetag"
            android:layout_below="@+id/lang"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work Experience:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/we"
            android:layout_below="@+id/wetag"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:hint="Where have you worked till now?" />

        <TextView
            android:id="@+id/wetext"
            android:layout_below="@+id/wetag"
            android:visibility="invisible"
            android:textSize="17sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/hobtag"
            android:layout_below="@+id/we"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="Hobbies:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/hob"
            android:layout_below="@+id/hobtag"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:hint="What are your hobbies?" />

        <TextView
            android:id="@+id/hobtext"
            android:layout_below="@+id/hobtag"
            android:textSize="17sp"
            android:visibility="invisible"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/create"
            android:text="Create PDF"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/hob"/>
            <!--android:onClick="create"/>-->

    </RelativeLayout>
</ScrollView>